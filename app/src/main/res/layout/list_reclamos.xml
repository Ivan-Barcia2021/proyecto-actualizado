<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">


            <TextView
                android:id="@+id/tipodeReclamoAmostrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="30dp"
                tools:text="Tipo de reclamo" />

            <TextView
                android:id="@+id/fechaAmostrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:layout_below="@+id/tipodeReclamoAmostrar"
                android:textSize="25dp"
                tools:text="Fecha" />

        <Button
            android:id="@+id/botonEstado"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tipodeReclamoAmostrar"
            android:layout_marginLeft="273dp"
            android:layout_marginTop="-25dp"
            android:layout_toRightOf="@+id/fechaAmostrar"
            android:background="@drawable/boton_redondo"
            app:backgroundTint="#DDC095" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>