<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/miboton"
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:text="Ver reclamos por departamento"
        android:textSize="20sp"
        android:onClick="presionaboton">

    </Button>

    <Button
        android:id="@+id/miboton2"
        android:layout_width="636dp"
        android:layout_height="103dp"
        android:layout_below="@+id/miboton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="0dp"
        android:text="Ver reclamos desde mas antiguos"
        android:textSize="20sp"
        android:onClick="presionaboton"
        ></Button>

    <Button
        android:id="@+id/miboton3"
        android:layout_width="628dp"
        android:layout_height="138dp"
        android:layout_below="@+id/miboton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="109dp"
        android:text="Ver reclamos desde mas recientes"
        android:textSize="20sp"
        android:onClick="presionaboton"
        ></Button>
</RelativeLayout>